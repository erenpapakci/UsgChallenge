<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialogButtonStyle">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:layout_marginBottom">@dimen/space_m</item>
        <item name="android:layout_marginTop">@dimen/space_m</item>
        <item name="android:text">@string/dialog_button_ok</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="coinDetailTextFonStyle">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginEnd">@dimen/space_xl</item>
        <item name="android:layout_marginStart">@dimen/space_m</item>
    </style>

    <style name="coinDetailStaticStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginStart">@dimen/space_m</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="coinDetailStaticValueStyle">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginEnd">@dimen/space_m</item>
        <item name="android:textColor">#323130</item>
    </style>

</resources>